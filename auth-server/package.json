    "autoprefixer": "^10.4.0",
    "dotenv": "^16.4.0",
    "drizzle-kit": "^0.28.0",
    "jose": "^6.1.2",
    "postcss": "^8.4.0",
    "postgres": "^3.4.7",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5.6.0"
