# Feature 017: Usage Data Collection System
# Environment Configuration Template
# Copy this file to .env and customize for your local environment

# ClickHouse Database Credentials
CLICKHOUSE_USER=telemetry_user
CLICKHOUSE_PASSWORD=change_me_in_production
CLICKHOUSE_DB=telemetry

# Read-only user for queries (optional, for team sharing)
TELEMETRY_READER_PASSWORD=readonly_password

# OTLP Collector Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=claude-code-telemetry
OTEL_LOG_LEVEL=info

# Data Retention (days)
TELEMETRY_DATA_RETENTION_DAYS=90

# Resource Limits
CLICKHOUSE_MAX_MEMORY_GB=2
OTEL_COLLECTOR_MAX_MEMORY_MB=512

# Deployment Context
DEPLOYMENT_ENVIRONMENT=local
ORGANIZATION_ID=panaversity
USER_ID=${USER}  # Auto-populated from system user

# Feature Flags
ENABLE_DATA_SANITIZATION=true
ENABLE_PII_FILTERING=true
ENABLE_PROMPT_HASHING=true

# Logging
LOG_LEVEL=info
ENABLE_DEBUG_LOGGING=false

